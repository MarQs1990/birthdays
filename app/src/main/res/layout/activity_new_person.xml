<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewPersonActivity">

    <TextView
            android:text="FÃ¼ge einen neuen Geburtstag hinzu"
            android:layout_width="297dp"
            android:layout_height="60dp"
            android:id="@+id/descriptionView"
            android:textAlignment="center" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/snameText"
            android:hint="Nachname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/fnameText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fnameText"
            android:hint="Vorname"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/descriptionView"/>
    <Button
            android:text="Speichern"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            android:onClick="saveNewPerson"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/monthText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"/>
    <Button
            android:text="Abbrechen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:onClick="cancel"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/monthText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"/>
    <EditText
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/dayText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="31dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/snameText"
            app:layout_constraintEnd_toStartOf="@+id/monthText" android:layout_marginEnd="15dp" android:hint="Tag"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/monthText" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/dayText" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/snameText" app:layout_constraintEnd_toStartOf="@+id/yearText"
            android:layout_marginEnd="15dp" android:hint="Monat"/>
    <EditText
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/yearText" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/monthText" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/snameText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp" android:hint="Jahr"/>
</android.support.constraint.ConstraintLayout>