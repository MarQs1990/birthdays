<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SavePersonActivity">

    <TextView
            android:text="@string/headline_new_person"
            android:layout_width="297dp"
            android:layout_height="60dp"
            android:id="@+id/descriptionView"
            android:textAlignment="center" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/snameText"
            android:hint="@string/second_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/fnameText"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fnameText"
            android:hint="@string/first_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/descriptionView"
            android:importantForAutofill="no"/>
    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/savePersonButton"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/monthText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" android:onClick="onClickButton"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:onClick="cancel"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/monthText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"/>
    <EditText
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/dayText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="31dp"
            android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@+id/snameText"
            app:layout_constraintEnd_toStartOf="@+id/monthText" android:layout_marginEnd="15dp" android:hint="@string/day"
            android:importantForAutofill="no"/>
    <EditText
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/monthText" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/dayText" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/snameText" app:layout_constraintEnd_toStartOf="@+id/yearText"
            android:layout_marginEnd="15dp" android:hint="@string/month" android:importantForAutofill="no"/>
    <EditText
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/yearText" android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@+id/monthText" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/snameText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp" android:hint="@string/year" android:importantForAutofill="no"/>
</android.support.constraint.ConstraintLayout>